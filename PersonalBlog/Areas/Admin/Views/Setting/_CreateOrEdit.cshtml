@model Setting

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-body">
    <h4 class="form-section"><i class="icon-address-book"></i> اطلاعات کلی</h4>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>

<div class="form-actions">
    <div class="col-md-3 offset-md-3 centered">
        <button type="submit" class="btn btn-success">ثبت <i class="icon-check2"></i></button>
    </div>
    <div class="col-md-3 centered">
        <a asp-action="Index" class="btn btn-outline-warning mr-1">بازگشت <i class="icon-cross2"></i></a>
    </div>
</div>