                    @Html.DisplayNameFor(model => model.Summary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MetaDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MetaKeywords)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FocusKeyword)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VisitCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InsertUserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdateUserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeleteUserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InsertDateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdateDateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeleteDateTime)
